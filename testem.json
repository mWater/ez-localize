{
    "framework": "mocha",
    "src_files": [
        "src/**/*.js",
        "src/**/*.coffee",
        "test/*.coffee"
    ],
    "launch_in_dev": [ "Node" ],
    "launchers": {
        "Node": {
            "command": "mocha --compilers coffee:coffee-script/register test/*Tests.coffee -R tap",
            "protocol": "tap"
        }
    }
}